{
  "name": "@zityhub/logger",
  "repository": "https://github.com/zityhub/logger",
  "version": "2.0.2",
  "description": "",
  "type": "module",
  "main": "./dist/cjs/Logger.cjs",
  "module": "./dist/esm/Logger.js",
  "types": "./dist/types/Logger.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/Logger.js",
      "require": "./dist/cjs/Logger.cjs"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "vitest --run src",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && mv dist/cjs/Logger.js dist/cjs/Logger.cjs",
    "build": "npm run build:esm && npm run build:cjs",
    "test:manual:dev": "cross-env NODE_ENV=development tsx src/manual-tests/run-logger.ts",
    "test:manual:production": "cross-env NODE_ENV=production tsx src/manual-tests/run-logger.ts",
    "test:manual:production:async": "cross-env NODE_ENV=production tsx src/manual-tests/run-logger-async.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "files": [
    "dist"
  ]
}
